import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
       Scanner s=new Scanner(System.in);
        int n,t;
        n=s.nextInt();
        t=s.nextInt();
        int r1=n/t;
        int r2=n%t;
        System.out.printf("The number of students in each team is %d and left out is %d",r1,r2);
    
    }
}
