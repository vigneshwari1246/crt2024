import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
    int n, i, num;
        n=s.nextInt();
    int oddSum = 0, evenSum = 0;

    for (i = 0; i < n; i++) {
        num=s.nextInt();
        if (num % 2 == 0)
            evenSum += num;
        else
            oddSum += num;
    }
    System.out.printf("%d\n",oddSum);
    System.out.printf("%d\n",evenSum);
    }
}
